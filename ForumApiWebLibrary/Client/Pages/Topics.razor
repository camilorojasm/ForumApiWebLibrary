@page "/topics/{FId:long}"
@using ForumApiWebLibrary.Client.Components
@inject IForumApiClient ForumApiClient
@*@inject NavigationManager NavigationManager*@
@attribute [Authorize]

@layout MainLayout

<PageTitle>Topics Page</PageTitle>

<CascadingValue Value="FId">
    <CascadingValue Value="ActiveTabIndex">
        <TelerikTabStrip ActiveTabIndex="ActiveTabIndex" ActiveTabIndexChanged="@TabChangedHandler">
            <TabStripTab Title="Active">
                <TopicsByRankingListView />
            </TabStripTab>
            <TabStripTab Title="Recently Created">
                <TopicsByRankingListView />
            </TabStripTab>
            <TabStripTab Title="Upvoted">
                <TopicsByRankingListView />
            </TabStripTab>
        </TelerikTabStrip>
    </CascadingValue>
</CascadingValue>

